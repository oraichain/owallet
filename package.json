{
  "name": "owallet",
  "description": "OWallet: Cosmos x EVM in one Wallet",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@react-native-*/**",
      "**/react-native",
      "**/react-native/**",
      "**/*-react-native",
      "**/react-native-*",
      "**/@react-navigation/**",
      "**/expo-*",
      "**/@unimodules/**",
      "**/unimodules-*",
      "**/native-base",
      "**/@react-native-async-storage/async-storage",
      "**/@ledgerhq/react-native-hw-transport-ble",
      "**/jetifier",
      "**/@bugsnag/**"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev": "lerna run dev --parallel --ignore @owallet/extension --ignore @owallet/mobile --ignore @owallet/wc-client --ignore @owallet/wc-qrcode-modal",
    "clean": "lerna run clean && rimraf node_modules && yarn clean:watchman",
    "clean:watchman": "watchman watch-del-all",
    "build": "lerna run build",
    "build:libs": "lerna run build --ignore @owallet/extension --ignore @owallet/mobile",
    "postinstall": "patch-package",
    "test": "lerna run test --parallel",
    "build:clean": "yarn clean && yarn install --frozen-lockfile && lerna run build",
    "lint-test": "lerna run lint-test",
    "lint-fix": "lerna run lint-fix",
    "ci": "yarn install --frozen-lockfile && yarn build && yarn workspace mobile typecheck && yarn test",
    "ci-lint": "yarn install --frozen-lockfile && yarn lint-test"
  },
  "keywords": [],
  "author": "Oraichain",
  "license": "Apache-2.0",
  "devDependencies": {
    "@octokit/core": "^3.5.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^16.6.2",
    "webpack": "^4.0.0",
    "@types/webpack": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "cross-env": "^5.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^24.0.0",
    "firebase-tools": "^10.2.2",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "semver": "^7.3.5",
    "ts-jest": "^26.5.5",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "zx": "^4.2.0"
  },
  "resolutions": {
    "@ledgerhq/hw-transport": "6.27.2",
    "@ledgerhq/devices": "^7.0.0",
    "@types/react": "^16.14.4",
    "@cosmjs/crypto": "^0.24.0-alpha.25",
    "@iov/crypto": "2.1.0",
    "libsodium": "file:./etc/noop",
    "libsodium-wrappers": "file:./etc/noop",
    "node-sass": "file:./etc/noop"
  },
  "version": "0.0.0"
}
